<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的餐廳清單
      </a>
      <a href="/restaurants/new">新增餐廳資料</a>
    </div>
  </nav>

  <div class="banner"></div>
</header>
<div class="container">
  <div class="row mt-2">
    <!-- search bar -->
    <div class="container search-bar col-5">
      <div class="search-bar-inner">
        <form action="/search">
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{keyword}}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>    
    </div>

    <!-- dropdown box for sort  -->
    <div class="dropdown col-5">
      <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        餐廳排序
      </button>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="#">A->Z</a></li>
        <li><a class="dropdown-item" href="#">Z->A</a></li>
        <li><a class="dropdown-item" href="#">類別</a></li>
        <li><a class="dropdown-item" href="#">地區</a></li>
      </ul>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
          <div>
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}"
                alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>

                <span>
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
              <div class="card-footer d-flex justify-content-end">
                <a href="/restaurants/{{this._id}}/edit">
                  <button>Edit</button>
                </a>
                <a href="/restaurants/{{this._id}}">
                  <button>Detail</button>
                </a>
                <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" display="inline-block">
                  <button type="submit">Delete</button>
                </form>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>