<div class="w-75 mx-auto">
  <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">

    <label for="name" class="form-label">餐廳名稱(中文)</label>
    <input id="name" type="text" name="name" class="form-control" value="{{restaurant.name}}" required>

    <label for="name_en" class="form-label">餐廳名稱(英文)</label>
    <input id="name_en" type="text" name="name_en" class="form-control" value="{{restaurant.name_en}}" required>

    <label for="category" class="form-label">料理種類</label>
    <input id="category" type="text" name="category" class="form-control" value="{{restaurant.category}}" required>

    <label for="image" class="form-label">圖片網址</label>
    <input id="image" type="text" name="image" class="form-control" value="{{restaurant.image}}" required>

    <label for="location" class="form-label">餐廳位置</label>
    <input id="location" type="text" name="location" class="form-control" value="{{restaurant.location}}" required>

    <label for="phone" class="form-label">電話號碼</label>
    <input id="phone" type="text" name="phone" class="form-control" value="{{restaurant.phone}}" required>

    <label for="google_mapn" class="form-label">google map</label>
    <input id="google_map" type="text" name="google_map" class="form-control" value="{{restaurant.google_map}}" required>

    <label for="ratinge" class="form-label">餐廳評分</label>
    <input id="rating" type="number" name="rating" min="0" max="5" step=".01" class="form-control" value="{{restaurant.rating}}" required>

    <label for="description" class="form-label">餐廳描述</label>
    <input id="description" type="text" name="description" class="form-control" value="{{restaurant.description}}" required>

    <button type="submit">送出</button>

  </form>
</div>